<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= paginate @users %>
<%= page_entries_info @users %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= image_tag user.image.variant(resize: "200x200"), class: "profile" if user.image.attached? %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !(user == current_user) %>
        | <%= link_to "delete", user, method: :delete,
                                      data: { confirm: "You sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= paginate @users %>