<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4" style="background-color: #c0c0c0"; opacity: 0.9;>
    <section class="user_info">
      <p>
        <%= image_tag @user.image.variant(resize: "150x150") if @user.image.attached? %>
      </p>
        <%= @user.name %>
        <%= @user.comment %>

    </section>
    <section class="micropost_form">
        <%= render 'shared/guesthouse_form' %>
      </section>
  </aside>
  <div class="col-md-8" style="background-color: #fff";>
    
    <% if @user.guesthouses.any? %>
      <h3 class="text-center">紹介したGuesthouses (<%= @user.guesthouses.count %>)</h3>
      <ol class="microposts">
        <%= render @guesthouses %>
      </ol>
      <%= paginate @guesthouses %>
    <% else %>
      <h3 class="text-center">まだゲストハウスを投稿していません</h3>
    <% end %>
  </div>
</div>