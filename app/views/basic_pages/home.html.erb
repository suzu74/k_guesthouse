<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/guesthouse_form' %>
      </section>
    </aside>
    <div class="col-md-8" style="background-color: white; opacity: 0.9; ">
      <h3>Guesthouse</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

<div class="center">
  <h1>Welcome to the K-Guesthouse</h1>
  <h2>おすすめの韓国ゲストハウスを共有しよう！</h2>
  <%= link_to "早速登録する！", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<% end %>